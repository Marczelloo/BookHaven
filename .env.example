#Database connection string
MONGO_URI=mongodb://localhost:27017/your-database-name

#Secret key for session
SESSION_SECRET=your-secret-key

#Secret key for JWT
JWT_SECRET=your-secret-key

#Secret key for JWT refresh
JWT_REFRESH_SECRET=your-secret-refresh-key

#Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
# Prefer a service role key for server-side uploads; fallback to anon key if bucket is public
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_AVATARS_BUCKET=avatars
SUPABASE_INVOICES_BUCKET=invoices
# Set to true only if the avatars bucket has public read access
SUPABASE_AVATARS_PUBLIC=false
